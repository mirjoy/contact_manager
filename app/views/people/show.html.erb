<p id="notice"><%= notice %></p>

<p>
  <strong>First name:</strong>
  <%= @person.first_name %>
</p>

<p>
  <strong>Last name:</strong>
  <%= @person.last_name %>
</p>

<ul>
  <% @person.phone_numbers.each do |phone| %>
  <li><%= phone.number %> <%= link_to('edit', edit_phone_number_path(phone)) %></li>
  <% end %>
</ul>

<ul>
  <% @person.email_addresses.each do |email| %>
  <li><%= email.email %> <%= link_to('edit', edit_email_address_path(email), class: "emailclick") %></li>
  <% end %>
</ul>

<p><%= link_to 'Add phone number', new_phone_number_path(contact_id: @person.id, contact_type: 'Person') %></p>
<p><%= link_to 'Add an email address', new_email_address_path(contact_id: @person.id, contact_type: 'Person') %></p>
<%= link_to 'Edit', edit_person_path(@person) %> |
<%= link_to 'Back', people_path %>
